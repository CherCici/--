/* pages/indexx/indexx.wxss */

.container{
 width: 100%;
 height: 100%;
}

.search{
  margin:20rpx auto ;
  width: 95%;
  height: 150rpx;
  background: #ffffff;
  border-radius: 20rpx;
}
.search text,.search label{
  text-align: center;
  font-size: 14px;
  color: #1cc4bb;
}
.content{
  width: 100%;
  height: auto;
}
/*轮播*/
.banner{
  margin: 0 auto;
  width:100%;
  height: 350rpx;
}
.banner swiper-item,.banner swiper-item image{
  width: 100%;
  height: 500rpx;

}
/*景点分类
*/
.vinious-list {
  margin: 20rpx auto;
  display: inline-block;
  white-space: nowrap;
  width: 1500rpx;
  height: auto;
  flex: row;
  font-size: 20px;
  line-height: 300rpx;

}
 
.vinious-list view{
  width: 200rpx;
  height: auto;
  display: block;
  flex: row;
  float:left;
  
  
}

.vinious-list  image{
  width: 150rpx;
  height: 150rpx;
  vertical-align: middle;
  margin:0 auto;
}

.vinious-list  text{
  margin-left: 15rpx;
  text-align: left;
  margin-top: -50rpx;
  display: block;
  width: 100%;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 14px;
  color:#666666;
}
/*热门推荐*/
.recommend{
  margin:60rpx auto;
  width:95%;
  background: white;
  height: auto;
  border-radius: 20rpx;

}
.recommendTitle{
  margin-top: 120rpx;
  margin:0 auto;
  color:#666;
  text-align: center;
}
.recommend-content{
  overflow: hidden;
  margin:30rpx 15rpx 20rpx 13rpx;
  float: left;
  /*display: grid;
  justify-content: space-between;
  padding-inline-end: 50rpx;
  
  flex-flow: row wrap;*/
  background-color: white;
  width: 46%;
  height:400rpx;
  border-radius: 20rpx;
  
}
.recommend-content:nth-child(even){
  border-right: none;
  width:46%;
  margin:30rpx 15rpx 20rpx 13rpx;

}
.recommend-content:nth-child(1){
 margin-top: 20rpx;
 width: 46%;
}
.recommend-content:nth-child(2){
 margin-top: 20rpx;
 width: 46%;
}

.recommend-content image{
  float:left;
  vertical-align: middle;
  margin:0 auto;
  width: 44%;
  height: 280rpx;
  position: absolute;
  border-radius: 20rpx;
  
}
.recommend-content view{
  margin:0 auto;
  float:left;
  width:46%;
  display: flex;
  flex-direction: column;
  background-color: white;
  
}
.recommend-title{
  width:41%;
  padding-left: 2%;
  margin: 290rpx auto;
  float:left;
  background-color: white;
  font-size: 30rpx;
  color:#1cc4bb;
  height: 50rpx;
  vertical-align: middle;
  line-height: 50rpx;
  opacity: 0.8;
  position: absolute;

  
}
.recommend-title1{
 float: left;
 padding-left: 1%;
   width:43%;
  position: absolute;
  margin-top: 248rpx;
  font-size: 25rpx;
  color: #666666;
  background-color: white;
  opacity: 0.9;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;

}
