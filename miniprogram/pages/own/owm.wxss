/* pages/own/owm.wxss */
@import "./diss/diss.wxss";
.userinfo {
  margin-top: 100rpx;
  height: 200rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 200rpx auto;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-avatar:after {
  border: none;
}

.userinfo-nickname {
  font-size: 32rpx;
  color: #007aff;
  background-color: white;
  background-size: cover;
}

.userinfo-nickname::after {
  border: none;
}
.userinformation{
  width: 100%;
  height: 500rpx;
}
.information{
  margin:50rpx auto;
  color: #666;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
  width: 100%;
  height: 100rpx;
}
.information text{
  margin-left: 30rpx;
  margin-top:30rpx;
}
.swerper{
  margin:50rpx auto;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #f6f6f6;
  color: #666;
  display: flex;
  flex-direction: row;
  position: relative;
  z-index: 2;
  justify-content: center;
  align-items: center;
  border-bottom: 1rpx solid white;
}
.swerper-list{
  margin:0 30rpx;
  padding: 0 5rpx;
  font-size: 16px;
}
.on{
  border-bottom: 2rpx solid #1cc4bb;
  color:#1cc4bb;
}
.swiper-box{
  height:1000rpx;
}
.scroll-view1{
  width:100%;
  height: 10000rpx;
}
.gonglv{
  width:25%;
  margin-left:35%;
  margin:20rpx auto;
  height: 60rpx;
  text-align: center;
  vertical-align: middle;
  display: inline-block;
  line-height: 60rpx;
  font-size: 24px;
  background :#1cc4bb;
  color:white;
  opacity: 0.5  ;
}
.input-tel{
  width:95%;
  margin: 30rpx auto;
  display: flex;
  flex-direction: row;
  background-color: white;
  font-size: 16px;

}
.input-tel label{
  margin-top:30rpx;
  margin-left: 5%;
  width:25%;
  height: 80rpx;
}
.input-tel input{
  width:70%;
  height: 80rpx;
}