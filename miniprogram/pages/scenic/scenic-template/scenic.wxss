/* miniprogram/pages/scenic.wxss */
/*景点列表*/
.scenic-container{
  width: 100%;
  height: 100%;
  background-color: #f6f6f6;
}

.scenic-list{
  background-color: white;
  margin: 20rpx auto;
  vertical-align: middle;
  display: flex;
  flex-direction: row;
  width: 95%;
  height: 280rpx;
  border-radius: 20rpx;
  bottom: 15rpx;
}
.scenic-img{
 position: absolute;
 clip: rect(0rpx 300rpx 200rpx 0rpx);
 margin-top:35rpx;
 padding-left:10rpx;
 width: 40%;
 height: 230rpx;
 float: left;
 margin-bottom: 35rpx;

 

}
#scenic-content{
  position: relative;
  margin:30rpx auto;
  float: left;
  word-wrap: break-word;
  width: 50%;
  padding-left:44%;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  font-size: 12px;
   white-space: 8rpx;
}
#scenic-content .scenic-title{
  white-space:10rpx;
  font-size: 14px;
  
}
#scenic-content .scenic-lever{
  
 padding-top:10rpx;
 font-size: 12px;
 color: #1cc4bb;
 
 
}
#scenic-content .scenic-des{
  padding-top: 10rpx;
  color:#666666;

}
.scenic-cici{
 display: flex;
 flex-direction: row;
 position: relative;
 float:right;
}
.scenic-add{
  padding-top: 30rpx;
 
  float: left;
  color: #666666;
}
 .scenic-price{
   
   padding-left: 65%;
  bottom: 10rpx;
  padding-top: 20rpx;
  font-size: 16px;
  font-weight: bold;
  color: #e85521;

}
 